{{>header}}
<div class="container">
    <div class="row justify-content-sm-center">
        <h1>Crear nuevo inscrito</h1>
    </div>
    <form action="/save-course" method="post">
        <div class="row">
            <div class="col-sm-8 offset-sm-2">
                <div class="form-group">
                    <label for="idNameCourse">Documento</label>
                    <input type="text" class="form-control" id="idNameCourse" placeholder="Documento" required>
                </div>
                <div class="form-group">
                    <label for="idDescription">Nombre</label>
                    <input type="text" class="form-control" id="idDescription" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <label for="idCost">Correo</label>
                    <input type="text" class="form-control" id="idCost" placeholder="Correo" required>
                </div>
                <div class="form-group">
                    <label for="idCost">Telefono</label>
                    <input type="text" class="form-control" id="idCost" placeholder="Telefono" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary width-100">Crear inscrito</button>
                </div>
            </div>
        </div>
    </form>
    <br>
</div>
{{>footer}}